<h1><%= t('view_title.models.task.index') %></h1>
<p><%= notice %></p>

<p><%= t('helpers.submit.search') %></p>

<%= form_with url:tasks_path, method: :get, local: true do |f| %>
  <%= f.select :search, ['未着手', '着手中', '完了'], {include_blank: t('activerecord.attributes.task.status')}  %>
  <%= f.label :name, t('activerecord.attributes.task.name') %>
  <%= f.text_field :name %>
  <%= f.submit t('helpers.submit.search') %><%= link_to t('link_name.models.task.clear'), tasks_path %>
<% end %>

<%= link_to t('link_name.models.task.sort.dead_line'), tasks_path(sort: 'dead_line ASC'), id: 'sort_by_dead_line' %>
<%= link_to t('link_name.models.task.sort.priority'), tasks_path(sort: 'priority ASC'), id: 'sort_by_priority' %>
<%= link_to t('link_name.models.task.sort.created_at'), tasks_path(sort: 'created_at DESC') %>
<table>
  <tr>
    <th><%= t('activerecord.attributes.task.name') %></th>
    <th><%= t('activerecord.attributes.task.content') %></th>
    <th><%= t('activerecord.attributes.task.created_at') %></th>
    <th><%= t('activerecord.attributes.task.dead_line') %></th>
    <th><%= t('activerecord.attributes.task.status') %></th>
    <th><%= t('activerecord.attributes.task.priority') %></th>
  </tr>
<% @tasks.each do |task| %>
  <tr class='task_row'>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= task.created_at %></td>
    <td><%= task.dead_line %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to t('helpers.select.show'), task_path(task.id) %></td>
    <td><%= link_to t('helpers.select.edit'), edit_task_path(task.id) %></td>
    <td><%= link_to t('helpers.select.delete'), task_path(task.id),
            method: :delete, data: { confirm: t('Are_you_sure_?') } %></td>
  </tr>
<% end %>
</table>
<%= link_to t('link_name.models.task.new'), new_task_path %>
<%= paginate @tasks %>

<h1 class='text-center index_title'><%= t('view_title.models.user.index') %></h1>
<% @users.order(id: 'ASC').each do |user| %>
  <div class='user_row text-center'>
    <h2>
      <%= user.tasks.count %>
      <%= link_to user.name, admin_user_path(user.id) %>
    </h2>
    <%= admin?(user) %><br>
    <%= link_to t('helpers.select.edit'), edit_admin_user_path(user.id) %><br>
    <%= link_to t('helpers.select.delete'), admin_user_path(user.id),
                method: :delete, data: { confirm: t('Are_you_sure_?') } %><br><br>
  </div>
<% end %>
